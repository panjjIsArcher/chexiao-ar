<xr-scene ar-system="modes:Body;pose3d: true;" bind:ready="handleReady" >
	<xr-assets>
		<xr-asset-load type="gltf" asset-id="tool" src="https://gw.alipayobjects.com/os/bmw-prod/a1da72a4-023e-4bb1-9629-0f4b0f6b6fc4.glb" />
	</xr-assets>
	<xr-node node-id="lights">
    <xr-light type="ambient" color="1 1 1" intensity="1" />
    <xr-light type="directional" rotation="180 0 0" color="1 1 1" intensity="3" />
  </xr-node>
	<xr-camera
    id="camera" node-id="camera" clear-color="0.925 0.925 0.925 1"
    background="ar" is-ar-camera 
  />
	<xr-ar-tracker  id='tracker' mode="Body" auto-sync="2">
    <xr-gltf wx:if="{{loaded}}" id="tool"  model="tool" position="0 1 0"/>
	</xr-ar-tracker>
</xr-scene>