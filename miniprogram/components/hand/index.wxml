<xr-scene ar-system="modes:Hand" bind:ready="handleReady" bind:tick="handleTick">
	<xr-light type="ambient" color="1 1 1" intensity="1" cast-shadow/> 
	<xr-light type="directional" rotation="40 70 0" color="1 1 1" intensity="3" cast-shadow />
	<xr-assets >
    <xr-asset-load type="gltf" asset-id="cool-star"
		 src="https://mmbizwxaminiprogram-1258344707.cos.ap-guangzhou.myqcloud.com/xr-frame/demo/cool-star.glb" />
  </xr-assets>
	<!-- 需要在加载完毕后 用wx-if去控制 不然不会显示 -->
	<xr-ar-tracker id="tracker" mode="Hand" auto-sync="14">
    <xr-gltf wx:if="{{ loaded }}" model="cool-star" anim-autoplay />
  </xr-ar-tracker>
<xr-camera id="camera" is-ar-camera background="ar" />
</xr-scene>