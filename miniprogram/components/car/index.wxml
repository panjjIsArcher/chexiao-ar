<xr-scene bind:ready="handleReady">
	  <xr-light type="ambient" color="1 1 1" intensity="1" /> 
		<xr-assets>
			 <xr-asset-load type="gltf" asset-id="car" src="https://threejs.org/examples/models/gltf/ferrari.glb" />
		</xr-assets>

		<xr-mesh
			position="0 0 0" scale="5 1 5"  node-id="plane" id="plane" 
			geometry="plane" 
		/>
		<xr-mesh  scale="0.5 0.5 0.5" node-id="cube" id="cube" geometry="cube"  visible="{{false}}"  />
 		
    <xr-gltf wx:if="{{ loaded }}" model="car"  />
		
		<!-- 摄像机放在最后才能显示 -->
		<xr-camera id="camera" 
		clear-color="0.1 0.3 0.1 0.1" 
		target="cube" 
		position="0 0 4" 
		camera-orbit-control/>
</xr-scene>